<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="460.0" prefWidth="780.0" 
            xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.iskonnect.controllers.RegisterController"
            stylesheets="@../styles/auth.css">

    <!-- Left Side - Image -->
    <left>
        <VBox alignment="CENTER">
            <ImageView fitHeight="462.0" fitWidth="440.0" pickOnBounds="true">
                <image>
                    <Image url="@../../images/pup_auth.png"/>
                </image>
            </ImageView>
        </VBox>
    </left>

    <!-- Right Side - Form -->
    <right>
        <VBox spacing="15" prefWidth="340.0">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Text text="ISKOnnect" fill="#801818">
                    <font>
                        <Font name="Segoe UI Bold" size="12.0"/>
                    </font>
                </Text>
                <ImageView fitHeight="34.0" fitWidth="33.0">
                    <image>
                        <Image url="@../../images/logo.svg"/>
                    </image>
                </ImageView>
            </HBox>

            <!-- Title Section -->
            <VBox spacing="5">
                <Text text="Get Started" fill="#801818">
                    <font>
                        <Font name="Segoe UI Bold" size="25.0"/>
                    </font>
                </Text>
                <Text text="Welcome to ISKOnnect - Let's create your account" fill="#909090">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Text>
            </VBox>

            <!-- Form Fields -->
            <HBox spacing="20">
                <TextField fx:id="firstNameField" promptText="First Name" 
                          style="-fx-background-color: TRANSPARENT; -fx-border-radius: 7; -fx-border-color: #AAA7AD; -fx-background-radius: 7;">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </TextField>
                <TextField fx:id="lastNameField" promptText="Last Name"
                          style="-fx-background-color: transparent; -fx-background-radius: 7; -fx-border-color: #AAA7AD; -fx-border-radius: 7;">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </TextField>
            </HBox>

            <TextField fx:id="emailField" promptText="Email"
                      style="-fx-background-color: transparent; -fx-background-radius: 7; -fx-border-color: #AAA7AD; -fx-border-radius: 7;">
                <font>
                    <Font size="10.0"/>
                </font>
            </TextField>

            <PasswordField fx:id="passwordField" promptText="Enter your password"
                          style="-fx-background-color: transparent; -fx-background-radius: 7; -fx-border-color: #AAA7AD; -fx-border-radius: 7;">
                <font>
                    <Font size="10.0"/>
                </font>
            </PasswordField>

            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                          style="-fx-background-color: transparent; -fx-background-radius: 7; -fx-border-color: #AAA7AD; -fx-border-radius: 7;">
                <font>
                    <Font size="10.0"/>
                </font>
            </PasswordField>

            <TextField fx:id="studentNumberField" promptText="Student Number (2024-00000-MN-0)"
                      style="-fx-background-color: transparent; -fx-background-radius: 7; -fx-border-color: #AAA7AD; -fx-border-radius: 7;">
                <font>
                    <Font size="10.0"/>
                </font>
            </TextField>

            <CheckBox text="I agree to the Terms &amp; Conditions" textFill="#909090">
                <font>
                    <Font size="10.0"/>
                </font>
            </CheckBox>

            <Button fx:id="registerButton" text="Create account" 
                    onAction="#handleRegister"
                    style="-fx-background-color: #801818; -fx-background-radius: 7;"
                    textFill="WHITE">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>

            <!-- Login Link -->
            <HBox alignment="CENTER">
                <Hyperlink text="Already have an account? Login" 
                          onMouseClicked="#switchToLogin"
                          style="-fx-text-fill: #909090;">
                    <font>
                        <Font size="9.0"/>
                    </font>
                </Hyperlink>
            </HBox>
        </VBox>
    </right>
</BorderPane>