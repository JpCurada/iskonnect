<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.iskonnect.controllers.RegisterController">
    
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Label text="Create Account" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="studentNumberField" promptText="Student Number"/>
    <TextField fx:id="nameField" promptText="Full Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    <ComboBox fx:id="courseComboBox" promptText="Select Course"/>
    
    <Button fx:id="registerButton" text="Register" onAction="#handleRegister"/>
    <Hyperlink text="Already have an account? Login" onAction="#switchToLogin"/>
</VBox>