<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" 
      xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.iskonnect.controllers.LoginController"
      stylesheets="@../styles/auth.css">
    
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Label text="Welcome to ISKOnnect" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="emailField" 
              promptText="Email" 
              styleClass="input-field"/>
              
    <PasswordField fx:id="passwordField" 
                  promptText="Password" 
                  styleClass="input-field"/>
    
    <Button fx:id="loginButton" 
            text="Login" 
            onAction="#handleLogin" 
            styleClass="auth-button"/>
            
    <Hyperlink text="Create Account" 
               onAction="#switchToRegister" 
               styleClass="auth-link"/>
</VBox>