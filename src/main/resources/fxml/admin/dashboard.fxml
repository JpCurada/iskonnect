                            <xAxis>
                           <NumberAxis label="Upvotes" side="BOTTOM" />
                        </xAxis>
                            <yAxis>
                           <CategoryAxis side="LEFT" />
                        </yAxis>
                        </BarChart>
                    </VBox>
               
