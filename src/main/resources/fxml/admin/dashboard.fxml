      <content>
         <VBox prefHeight="890.0" prefWidth="1042.0" style="-fx-background-color: #FEF9E1;">
            <children>
            
                                                                                                       <!-- Charts Grid -->
                <GridPane alignment="TOP_CENTER" hgap="15.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-alignment: center; -fx-background-color: #FEF9E1;" vgap="15.0">
                    <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;" GridPane.columnIndex="0" GridPane.rowIndex="0">
