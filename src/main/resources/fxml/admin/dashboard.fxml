                           <NumberAxis label="Number of Materials" side="BOTTOM" />
                        </xAxis>
                            <yAxis>
                           <CategoryAxis side="LEFT" />
                        </yAxis>
                        </BarChart>
                    </VBox>
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
