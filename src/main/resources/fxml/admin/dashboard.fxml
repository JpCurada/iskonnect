                                                     <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" HBox.hgrow="ALWAYS">
            <Label style="-fx-text-fill: #666666;" text="Total Materials" />
            <Label fx:id="totalMaterialsLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;" text="0" />
        </VBox>

                                                     <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" HBox.hgrow="ALWAYS">
            <Label style="-fx-text-fill: #666666;" text="Reported Materials" />
