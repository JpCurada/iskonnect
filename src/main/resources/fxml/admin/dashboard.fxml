<VBox prefHeight="1034.0" prefWidth="1081.0" spacing="20" style="-fx-background-color: #FEF9E1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.AdminDashboardController">
      
