
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;"
      xmlns="http://javafx.com/javafx/23.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.iskonnect.controllers.AdminReportsController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;" 
           text="Reported Materials"/>

    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" prefWidth="250"
                  promptText="Search reports..."/>
        <Region HBox.hgrow="ALWAYS"/>
        <ProgressIndicator fx:id="loadingIndicator" 
                          visible="false"/>
    </HBox>

    <!-- Reports Table -->
    <TableView fx:id="reportsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Material Title" prefWidth="150"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
            <TableColumn fx:id="uploaderColumn" text="Uploader ID" prefWidth="100"/>
            <TableColumn fx:id="reporterColumn" text="Reporter ID" prefWidth="100"/>
            <TableColumn fx:id="reasonColumn" text="Reason" prefWidth="150"/>
            <TableColumn fx:id="countColumn" text="Report Count" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>