<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;" stylesheets="@../../styles/report.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.AdminReportsController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Title -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;" text="Reported Materials" />

    <!-- Search Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="searchField" prefWidth="250" promptText="Search reports..." />
        <Region HBox.hgrow="ALWAYS" />
        <ProgressIndicator fx:id="loadingIndicator" prefHeight="25.0" prefWidth="25.0" visible="false" />
    </HBox>

    <!-- Reports Table -->
    <TableView fx:id="reportsTable" styleClass="report-table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn id="materialTitle" fx:id="titleColumn" prefWidth="150" text="Material Title" />
            <TableColumn id="description" fx:id="descriptionColumn" prefWidth="200" text="Description" />
            <TableColumn id="uploaderID" fx:id="uploaderColumn" prefWidth="100" text="Uploader ID" />
            <TableColumn id="reporterID" fx:id="reporterColumn" prefWidth="100" text="Reporter ID" />
            <TableColumn id="reason" fx:id="reasonColumn" prefWidth="150" text="Reason" />
            <TableColumn id="reportCount" fx:id="countColumn" prefWidth="100" text="Report Count" />
        </columns>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
</VBox>
