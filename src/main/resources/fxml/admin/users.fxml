<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.AdminUsersController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;" text="Manage Users" />

    <!-- Search Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="searchField" prefWidth="250" promptText="Search users..." />
        <Region HBox.hgrow="ALWAYS" />
        <ProgressIndicator fx:id="loadingIndicator" prefHeight="25" prefWidth="25" visible="false" />
    </HBox>

    <!-- Users Table -->
    <TableView fx:id="usersTable" blendMode="SRC_ATOP" style="-fx-background-radius: 7;" stylesheets="@../../styles/user.css" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userIdColumn" prefWidth="100" text="User ID" />
            <TableColumn fx:id="firstNameColumn" prefWidth="120" text="First Name" />
            <TableColumn fx:id="lastNameColumn" prefWidth="120" text="Last Name" />
            <TableColumn fx:id="emailColumn" prefWidth="180" text="Email" />
            <TableColumn fx:id="pointsColumn" prefWidth="80" text="Points" />
            <TableColumn fx:id="reportsColumn" prefWidth="80" text="Reports" />
            <TableColumn fx:id="upvotesColumn" prefWidth="80" text="Upvotes" />
        </columns>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
</VBox>
