<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;"
      xmlns="http://javafx.com/javafx/23.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.iskonnect.controllers.AdminUsersController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;" 
           text="Manage Users"/>

    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" prefWidth="250"
                  promptText="Search users..."/>
        <Region HBox.hgrow="ALWAYS"/>
        <ProgressIndicator fx:id="loadingIndicator" 
                          visible="false"
                          prefHeight="25" prefWidth="25"/>
    </HBox>

    <!-- Users Table -->
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100"/>
            <TableColumn fx:id="firstNameColumn" text="First Name" prefWidth="120"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name" prefWidth="120"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="180"/>
            <TableColumn fx:id="pointsColumn" text="Points" prefWidth="80"/>
            <TableColumn fx:id="reportsColumn" text="Reports" prefWidth="80"/>
            <TableColumn fx:id="upvotesColumn" text="Upvotes" prefWidth="80"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>