<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<!--<?import javafx.scene.layout.VBox?>-->
<VBox spacing="20" VBox.vgrow="ALWAYS" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;" styleClass="content-panel" stylesheets="@../../styles/leaderboard.css,@../../styles/shared.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.LeaderboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header -->
    <Text style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #A31D1D;" text="Leaderboard" />

       <!-- Statistics -->
    <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="130.0" styleClass="stat-box">
            <Text style="-fx-fill: #666666;" text="Total Contributors">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin>
         </Text>
            <Text fx:id="totalContributorsText" style="-fx-font-weight: bold; -fx-fill: #A31D1D;" text="0" />
        </VBox>
        <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="130.0" styleClass="stat-box">
            <Text style="-fx-fill: #666666;" text="Total Materials">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin>
         </Text>
            <Text fx:id="totalMaterialsText" style="-fx-font-weight: bold; -fx-fill: #A31D1D;" text="0" />
        </VBox>
        <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="130.0" styleClass="stat-box">
            <Text style="-fx-fill: #666666;" text="Total Points">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin>
         </Text>
            <Text fx:id="totalPointsText" style="-fx-font-weight: bold; -fx-fill: #A31D1D;" text="0" />
        </VBox>
    </HBox>

    <!-- Filters -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <ComboBox fx:id="timeFilter" focusTraversable="false" prefWidth="150" promptText="Time Period" styleClass="time-filter">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></ComboBox>
    </HBox>
 <TableView fx:id="leaderboardTable" focusTraversable="false" styleClass="leaderboard-table" VBox.vgrow="ALWAYS">
     <columns>
         <TableColumn fx:id="rankColumn" prefWidth="60" text="Rank" />
         <TableColumn fx:id="nameColumn" prefWidth="200" text="Student" />
         <TableColumn fx:id="pointsColumn" prefWidth="100" text="Points" />
         <TableColumn fx:id="materialsColumn" prefWidth="100" text="Materials" />
         <TableColumn fx:id="badgesColumn" prefWidth="100" text="Badges" />
     </columns>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
   <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
   </columnResizePolicy>
 </TableView>
</VBox>
