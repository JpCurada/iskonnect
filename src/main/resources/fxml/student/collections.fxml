<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;"
      xmlns="http://javafx.com/javafx/23.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.iskonnect.controllers.CollectionsController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox spacing="15">
        <VBox>
            <Text style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #A31D1D;" 
                  text="My Collections"/>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Text style="-fx-fill: #666666;" text="Total Bookmarked Materials:"/>
                <Text fx:id="totalMaterialsText" style="-fx-font-weight: bold;" text="0"/>
            </HBox>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#handleRefresh" 
                style="-fx-background-color: #A31D1D; -fx-text-fill: white; -fx-background-radius: 5;"
                text="Refresh"/>
    </HBox>

    <!-- Materials Grid -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
        <GridPane fx:id="materialsGrid" hgap="15" vgap="15">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>
        </GridPane>
    </ScrollPane>

    <!-- Style -->
    <style>
        .scroll-pane {
            -fx-background-color: transparent;
            -fx-border-color: transparent;
        }
        .scroll-pane > .viewport {
            -fx-background-color: transparent;
        }
    </style>
</VBox>