<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="content-panel" stylesheets="@../../styles/shared.css, @../../styles/contribute.css" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.ContributeController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header -->
    <Label styleClass="page-title" text="Share Study Material" />

    <!-- Stats Cards -->
    <HBox prefWidth="200.0" styleClass="stats-container">
        <VBox styleClass="stat-card">
            <Label styleClass="stat-label" text="Your Points" />
            <Label styleClass="stat-value" fx:id="pointsLabel" text="0" />
        </VBox>
        <VBox prefWidth="200.0" styleClass="stat-card">
            <Label styleClass="stat-label"  text="Materials Shared" />
            <Label styleClass="stat-value" fx:id="materialsCountLabel" text="0" />
        </VBox>
    </HBox>
   <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" maxWidth="1.7976931348623157E308" vbarPolicy="NEVER">
      <content>

          <!-- Main Form -->
          <VBox styleClass="form-container" maxWidth="1.7976931348623157E308" spacing="7.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);">
              <!-- Material Name -->
              <VBox spacing="5">
                  <Label styleClass="form-label" style="-fx-text-fill: #666666; -fx-font-weight: bold;" text="Material Name" />
                  <TextField fx:id="materialNameField" promptText="Enter material name" style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;" VBox.vgrow="ALWAYS" />
              </VBox>

              <!-- Description -->
              <VBox spacing="5.0">
                  <Label styleClass="form-label" style="-fx-text-fill: #666666; -fx-font-weight: bold;" text="Description">
                      <VBox.margin>
                          <Insets bottom="5.0" />
                      </VBox.margin>
                      <font>
                          <Font name="System Bold" size="12.0" />
                      </font>
                  </Label>
                  <TextArea fx:id="descriptionField" prefRowCount="3" promptText="Enter material description" style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;" wrapText="true" VBox.vgrow="ALWAYS" />
              </VBox>
              <VBox prefHeight="109.0" prefWidth="482.0" spacing="10.0">
                  <children>
                      <VBox spacing="5">
                          <Label styleClass="form-label" style="-fx-text-fill: #666666;" text="Subject">
                              <font>
                                  <Font name="System Bold" size="12.0" />
                              </font>
                          </Label>
                          <TextField fx:id="subjectField" maxWidth="1.7976931348623157E308" promptText="Enter subject" style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;" />
                      </VBox>
                      <VBox spacing="5">
                          <Label styleClass="form-label" style="-fx-text-fill: #666666; -fx-font-weight: bold;" text="College" />
                          <ComboBox fx:id="collegeComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" style="-fx-background-radius: 4; -fx-background-color: transparent; -fx-border-radius: 4; -fx-border-color: #E0E0E0;">
                              <cursor>
                                  <Cursor fx:constant="HAND" />
                              </cursor>
                          </ComboBox>
                      </VBox>
                      <VBox spacing="5">
                          <Label styleClass="form-label" style="-fx-text-fill: #666666; -fx-font-weight: bold;" text="Course" />
                          <ComboBox fx:id="courseComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" style="-fx-background-radius: 4; -fx-background-color: transparent; -fx-border-radius: 4; -fx-border-color: #E0E0E0;">
                              <cursor>
                                  <Cursor fx:constant="HAND" />
                              </cursor>
                              <VBox.margin>
                                  <Insets />
                              </VBox.margin>
                          </ComboBox>
                      </VBox>
                  </children>
                  <VBox.margin>
                      <Insets bottom="10.0" />
                  </VBox.margin>
              </VBox>

              <!-- File Selection -->
              <VBox prefHeight="158.0" prefWidth="482.0">
                  <!-- Drag and Drop Area -->
                  <VBox styleClass="drop-area" fx:id="dropArea" onDragDropped="#handleDragDropped" onDragExited="#handleDragExited" onDragOver="#handleDragOver" >
                      <Label style="-fx-text-fill: #666666;" text="Drag and drop your file here" />
                      <Label style="-fx-text-fill: #666666;" text="or" />
                      <Button fx:id="selectFileButton"
                              styleClass="secondary-button"
                              onAction="#handleFileSelection"
                              text="Choose File">
                          <cursor>
                              <Cursor fx:constant="HAND" />
                          </cursor>
                      </Button>
                  <padding>
                     <Insets bottom="15.0" top="15.0" />
                  </padding>
                  </VBox>
                  <Label fx:id="fileNameLabel" style="-fx-text-fill: #666666;" text="No file selected" />
                  <Label fx:id="statusLabel" style="-fx-text-fill: #A31D1D;" wrapText="true" />
              </VBox>

              <!-- Upload Button -->
              <Button fx:id="uploadButton"
                      styleClass="primary-button"
                      maxWidth="Infinity"
                      onAction="#handleUpload"
                      text="Upload Material">
                  <cursor>
                      <Cursor fx:constant="HAND" />
                  </cursor>
              </Button>
          </VBox>
      </content>
   </ScrollPane>
</VBox>
