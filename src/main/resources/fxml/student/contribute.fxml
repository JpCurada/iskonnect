<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="25" xmlns="http://javafx.com/javafx/" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.iskonnect.controllers.ContributeController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label text="Share Study Material" 
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;"/>
    
    <!-- Stats Cards -->
    <HBox spacing="15">
        <VBox styleClass="stat-box" 
              style="-fx-background-color: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);">
            <Label text="Your Points" style="-fx-text-fill: #666666; -fx-font-size: 13;"/>
            <Label fx:id="pointsLabel" text="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #A31D1D; -fx-font-size: 20;"/>
        </VBox>
        <VBox styleClass="stat-box" 
              style="-fx-background-color: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);">
            <Label text="Materials Shared" style="-fx-text-fill: #666666; -fx-font-size: 13;"/>
            <Label fx:id="materialsCountLabel" text="0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #A31D1D; -fx-font-size: 20;"/>
        </VBox>
    </HBox>

    <!-- Main Form -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" 
          spacing="15">
        <!-- Material Name -->
        <VBox spacing="5">
            <Label text="Material Name" style="-fx-text-fill: #666666;"/>
            <TextField fx:id="materialNameField" 
                      style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;"
                      promptText="Enter material name"/>
        </VBox>

        <!-- Description -->
        <VBox spacing="5">
            <Label text="Description" style="-fx-text-fill: #666666;"/>
            <TextArea fx:id="descriptionField" prefRowCount="3" wrapText="true"
                    style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;"
                    promptText="Enter material description"/>
        </VBox>

        <!-- Subject, College, Course -->
        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Subject" style="-fx-text-fill: #666666;"/>
                <TextField fx:id="subjectField" 
                          style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;"
                          promptText="Enter subject"/>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="College" style="-fx-text-fill: #666666;"/>
                <TextField fx:id="collegeField" 
                          style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;"
                          promptText="Enter college"/>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Course" style="-fx-text-fill: #666666;"/>
                <TextField fx:id="courseField" 
                          style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;"
                          promptText="Enter course"/>
            </VBox>
        </HBox>

        <!-- File Selection -->
        <VBox spacing="8">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="selectFileButton" text="Choose File" onAction="#handleFileSelection"
                        style="-fx-background-color: #A31D1D; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 16;"/>
                <Label fx:id="fileNameLabel" text="No file selected" style="-fx-text-fill: #666666;"/>
            </HBox>
            <Label fx:id="statusLabel" wrapText="true" style="-fx-text-fill: #A31D1D;"/>
        </VBox>

        <!-- Upload Button -->
        <Button fx:id="uploadButton" text="Upload Material" onAction="#handleUpload"
                style="-fx-background-color: #A31D1D; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 10 20; -fx-font-size: 13;"
                maxWidth="Infinity"/>
    </VBox>
</VBox>