<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.ContributeController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #A31D1D;" text="Share Study Material" />
    
                            <!-- Stats Cards -->
    <HBox spacing="15">
        <VBox style="-fx-background-color: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" styleClass="stat-box">
            <Label style="-fx-text-fill: #666666; -fx-font-size: 13;" text="Your Points" />
            <Label fx:id="pointsLabel" style="-fx-font-weight: bold; -fx-text-fill: #A31D1D; -fx-font-size: 20;" text="0" />
        </VBox>
        <VBox style="-fx-background-color: white; -fx-padding: 15 25; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);" styleClass="stat-box">
            <Label style="-fx-text-fill: #666666; -fx-font-size: 13;" text="Materials Shared" />
            <Label fx:id="materialsCountLabel" style="-fx-font-weight: bold; -fx-text-fill: #A31D1D; -fx-font-size: 20;" text="0" />
        </VBox>
    </HBox>
   <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-hbar-policy: never; -fx-vbar-policy: never;">
      <content>
      
                                              <!-- Main Form -->
          <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 1);">
              <!-- Material Name -->
              <VBox spacing="5">
                  <Label style="-fx-text-fill: #666666;" text="Material Name" />
                  <TextField fx:id="materialNameField" promptText="Enter material name" style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;" />
              </VBox>
      
                                                  <!-- Description -->
              <VBox spacing="5">
                  <Label style="-fx-text-fill: #666666;" text="Description" />
                  <TextArea fx:id="descriptionField" prefRowCount="3" promptText="Enter material description" style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;" wrapText="true" />
              </VBox>
      
                                                  <!-- Subject, College, Course -->
              <HBox spacing="15">
                  <VBox spacing="5" HBox.hgrow="ALWAYS">
                      <Label style="-fx-text-fill: #666666;" text="Subject" />
                      <TextField fx:id="subjectField" promptText="Enter subject" style="-fx-background-radius: 4; -fx-border-color: #E0E0E0; -fx-border-radius: 4; -fx-background-color: transparent;" />
                  </VBox>
                  <VBox spacing="5" HBox.hgrow="ALWAYS">
                      <Label style="-fx-text-fill: #666666;" text="College" />
                  <ComboBox fx:id="collegeComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" style="-fx-background-radius: 4; -fx-background-color: transparent; -fx-border-radius: 4; -fx-border-color: #E0E0E0;">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ComboBox>
                  </VBox>
                  <VBox spacing="5" HBox.hgrow="ALWAYS">
                      <Label style="-fx-text-fill: #666666;" text="Course" />
                  <ComboBox fx:id="courseComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" style="-fx-background-radius: 4; -fx-background-color: transparent; -fx-border-radius: 4; -fx-border-color: #E0E0E0;">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ComboBox>
                  </VBox>
              </HBox>
      
                                                  <!-- File Selection -->
              <VBox spacing="8">
                  <HBox alignment="CENTER_LEFT" spacing="10">
                      <Button fx:id="selectFileButton" onAction="#handleFileSelection" style="-fx-background-color: #A31D1D; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 8 16;" text="Choose File">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                      <Label fx:id="fileNameLabel" style="-fx-text-fill: #666666;" text="No file selected" />
                  </HBox>
                  <Label fx:id="statusLabel" style="-fx-text-fill: #A31D1D;" wrapText="true" />
              </VBox>
      
                                                  <!-- Upload Button -->
              <Button fx:id="uploadButton" maxWidth="Infinity" onAction="#handleUpload" style="-fx-background-color: #A31D1D; -fx-text-fill: white; -fx-background-radius: 4; -fx-padding: 10 20; -fx-font-size: 13;" text="Upload Material">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
          </VBox>
      </content>
   </ScrollPane>
</VBox>
