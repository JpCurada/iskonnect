<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="20" style="-fx-background-color: #FEF9E1; -fx-background-radius: 30 0 0 0;" styleClass="content-panel" stylesheets="@../../styles/home.css,@../../styles/shared.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iskonnect.controllers.HomeController">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header Section -->
    <VBox spacing="5">
        <Text fx:id="dateText" fill="#666666" styleClass="homeText" text="date" VBox.vgrow="ALWAYS">
         </Text>
        <Text fx:id="welcomeText" fill="#a31d1d" text="Hello, Isko" VBox.vgrow="ALWAYS">
         </Text>
        <HBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
            <Text fx:id="greetingText" styleClass="greeting" text="Kumusta ang araw mo, " HBox.hgrow="ALWAYS">
            </Text>
            <Text fx:id="firstNameText" styleClass="greeting" text="name" HBox.hgrow="ALWAYS">
            </Text>
            <Text fx:id="questionMark" styleClass="greeting" text="?" wrappingWidth="81.37891864776611" HBox.hgrow="ALWAYS">
            </Text>
      
          <!-- Search Bar -->
          <HBox alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="263.0" spacing="10" HBox.hgrow="ALWAYS">
              <TextField fx:id="searchField" prefHeight="27.0" prefWidth="250.0" promptText="Ano ang hanap mo?" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #ddd;" />
              <Button minWidth="55.0" onAction="#handleSearch" style="-fx-background-color: #A31D1D; -fx-text-fill: white; -fx-background-radius: 20;" text="Search">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
          </HBox>
        </HBox>
    </VBox>

    <!-- Materials Grid -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent;" vbarPolicy="NEVER">
        <content>
            <GridPane fx:id="materialsGrid" hgap="15" vgap="15">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>
            </GridPane>
        </content>
    </ScrollPane>

    <!-- Pagination Container -->
    <VBox fx:id="paginationContainer" alignment="CENTER" spacing="10" />

</VBox>